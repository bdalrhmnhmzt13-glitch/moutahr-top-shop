    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const itemCountInput = document.getElementById('itemCount');
            const demoCartCount = document.getElementById('demoCartCount');
            const demoCartButton = document.getElementById('demoCartButton');
            
            itemCountInput.addEventListener('input', function() {
                let count = parseInt(this.value);
                
                if (isNaN(count) || count < 0) {
                    count = 0;
                } else if (count > 99) {
                    count = 99;
                }
                
                demoCartCount.textContent = count;
                
                // ØªØ­Ø¯ÙŠØ« Ù‚ÙŠÙ…Ø© Ø§Ù„Ù…Ø¯Ø®Ù„ Ù„Ø¶Ù…Ø§Ù† Ø£Ù†Ù‡Ø§ Ø¶Ù…Ù† Ø§Ù„Ù†Ø·Ø§Ù‚
